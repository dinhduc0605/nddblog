<div id="preview-modal">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content border-0">
      <div class="modal-header bg-light border-bottom-0 py-3 px-4">
        <h5 class="modal-title font-weight-bold" id="exampleModalLabel text-dark">
          <i class="fa fa-eye mr-2 text-primary"></i> Post Preview
        </h5>
        <button type="button" class="close" id="close-preview-modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body p-0" style="background: #f8fafc;">
        <iframe id="preview-iframe" name="preview-iframe" style="width: 100%; height: 100%; border: none;"></iframe>
      </div>
      <div class="modal-footer bg-white border-top-0 py-3 px-4">
        <button type="button" class="btn btn-secondary px-4" id="close-preview-btn">Close Preview</button>
      </div>
    </div>
  </div>
</div>
