<div class="card">
  <div class="card-header">
    <h4 class="card-title">Categories</h4>
    <div class="header-actions">
      <%= link_to new_admin_category_url, class: 'btn-primary' do %>
        <i class="fa fa-plus"></i> New Category
      <% end %>
    </div>
  </div>
  <div class="card-body">
    <table class="modern-table">
      <thead>
        <tr>
          <th><%= t 'stt' %></th>
          <th class="no-sort"><%= Category.human_attribute_name(:image) %></th>
          <th><%= Category.human_attribute_name(:name) %></th>
          <th class="no-sort"></th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>
  </div>
</div>
